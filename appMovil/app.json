{
  "expo": {
    "name": "Eternal Joyería",
    "slug": "eternal-joyeria",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#fce4ec"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#fce4ec"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.isjustomi.eternaljoyeria"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Permite que Eternal Joyería acceda a tus fotos para actualizar tu perfil.",
          "cameraPermission": "Permite que Eternal Joyería use la cámara para tomar tu foto de perfil."
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "321b9fba-39a5-49be-ad01-b050a1a955de"
      }
    }
  }
}
